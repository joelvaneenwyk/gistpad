{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": [
        "$ts-webpack-watch",
        "$tslint-webpack-watch"
      ],
      "group": "build"
    },
    {
      "label": "build-watch",
      "type": "npm",
      "script": "watch",
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "beginsPattern": "\\d{1,2}%\\sbuilding",
          "endsPattern": "Hash:\\s[a-f0-9]{20}"
        }
      },
      "isBackground": true,
      "group": "build"
    },
    {
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": [
        "$ts-webpack",
        "$tslint-webpack"
      ]
    },
    {
      "type": "npm",
      "script": "watch",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [
        "$ts-webpack-watch",
        "$tslint-webpack-watch"
      ]
    }
  ]
}
